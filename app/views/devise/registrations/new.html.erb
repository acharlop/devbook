<div class="container center-div">
<div class="row">
<h2 class="devise-title">Sign up</h2>

<%= form_for(resource, as: resource_name, class: "form-horizontal", url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :first, placeholder: "First name", autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="field form-group">
    <%= f.text_field :last, placeholder: "Last name", autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="field form-group">
    <%= f.email_field :email, placeholder: "Email address", autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="field form-group">
    <% pass_text = "Password" %>
    <% if @minimum_password_length %>
      <% pass_text << " (#{@minimum_password_length} characters min)" %>
    <% end %>
    <%= f.password_field :password, placeholder: pass_text, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Free Account", class: "btn btn-default btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
