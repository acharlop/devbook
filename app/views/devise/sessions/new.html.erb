<div class="container center-div">
<div class="row">
<h2 class="devise-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-lg" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="text-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "control-label" %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-default btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div></div>